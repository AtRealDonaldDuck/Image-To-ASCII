<UserControl x:Class="UserInterface.UserControls.CharactersPerLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface"
             mc:Ignorable="d" 
             MinHeight="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Characters/Line " HorizontalAlignment="Left" Grid.Column="0"/>
        <TextBox MinWidth="25" Text="180" x:Name="txtBoxCharactersPerLineInput" HorizontalAlignment="Right" Grid.Column="1" PreviewTextInput="txtBoxCharactersPerLineInput_PreviewTextInput"/>
    </Grid>
</UserControl>
